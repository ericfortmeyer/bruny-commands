{
    "name": "ericfortmeyer/bruny-commands",
    "description": "A Command Library for the Bruny Micro Framework",
    "type": "library",
    "require": {
        "php": ">=8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phan/phan": "^5.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bruny\\Commands\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Eric Fortmeyer",
            "email": "e.fortmeyer01@gmail.com"
        }
    ],
    "scripts": {
        "analyze-init": "composer exec \"phan --init\"",
        "analyze": "composer exec phan",
        "lint": "composer exec \"phpcs src --standard=PSR12\"",
        "lint-fix": "composer exec \"phpcbf src --standard=PSR12\"",
        "test": "composer exec phpunit"
    }
}
